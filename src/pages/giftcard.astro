---
import MainLayout from "../layouts/MainLayout.astro";
import Button from '../components/Button.astro';
const {frontmatter} = Astro.props;
---
<MainLayout title="Titel">
	<h1>Gavekort</h1>
    <article>
        <img src="" alt="">
        <section>
            <h3>Hvor meget skal gavekortet til <span>Frederik</span> være på?</h3>
            <form class="">
                <div x-data="{ selectedCard: null }" class="">
                    <div
                        x-on:click="selectedCard = 1"
                        x-bind:class="selectedCard === 1 ? 'border-2 border-darkblue-400' : 'hover:border-2 hover:border-red-500'"
                        class="p-4 bg-beige-500 shadow cursor-pointer transition duration-200 ease-in-out">

                    </div>
                    
                    <p>Vælg andet beløb</p>
                    <!-- Input Field & Button -->
                    <div class="mt-4 pt-8">
                    <input type="text" @click="selected = 4"
                            x-model="amount" placeholder="100"
                            class="py-3 lg:px-2 text-xl lg:text-3xl rounded-full border-2 border-roed text-roed m-1 text-center focus:border-roed placeholder-lysroed"> 
                    </div>
                </div>
            </form>
            <div>
                <Button><a href="/guest.astro">Næste</a></Button>
            </div>
        </section>
    </article>
</MainLayout>